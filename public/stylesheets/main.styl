html 
  padding: 0
  
body 
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  padding: 0 30px
  margin: 0
  background: rgba(236, 240, 241,1.0)
  a
    color: inherit
    text-decoration: none
    &hover
      cursor: pointer
  
nav 
  height: 60px
  margin: 0 0 10px 0
  padding-top: 10px
  border-bottom: 1px solid black
  .nav_title
    margin: 0
    font-size: 48px
  ul 
    padding: 0
    margin: 0
    list-style: none
    li
      margin: 0 10px
      display: inline-block

button 
  margin: 10px 0
  border: none
  padding: 10px
  border-radius: 8px
  font-size: 24px

.green_bkg 
  background: rgba(46, 204, 113,1.0)
  color: snow
  
form.new_post,
form.new_category
  margin: 0 auto
  width: 800px
  label
    display: block
    font-size: 24px
    &.category_tag
      display: inline-block
  input
    width: 100%
    border-radius: 8px
    font-size: 24px
    &[type="text"],
    &[type="url"]
      margin: 20px 0
      height: 30px
      border: 1px solid rgba(0, 0, 0, 0.2)
    &[type="submit"]
      height: 40px
      &hover
        cursor: pointer
    
  textarea
    display: block
    width: 100%
    height: 100px
    border: 1px solid rgba(0, 0, 0, 0.2)
    border-radius: 8px
    margin: 10px 0
    font-size: 24px

.post_preview
  background: snow
  img
    float: left
    padding: 10px
    height: 100px
    display: block
    margin-right: 40px
  &:after
    content: ""
    display: block
    clear: both
      

.categories_tags
  .category_tag
    +
      .category_tag
        margin-left: 5px
        &:before 
          display: inline-block
          content: "|"
          margin-right: 5px
    &hover
      text-decoration: underline !important

.post
  margin: 0 auto
  max-width: 1000px
  text-align: center
  .post_body
    text-align: justify
    border-radius: 10px
    padding: 10px 40px
    background: snow



